<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/Site.css" rel="stylesheet" />
    <title>@ViewBag.Title - My ASP.NET Application</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top header">

        <div class="container">

            <div class="navbar-header">
                <img class="logo_img" src="~/Images/logo1.svg" width="27" height="27" role="img">


                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">

                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>

                </button>

                @Html.ActionLink("StackTak", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <!--navbar-collapse collapse-->
            <div class="d-flex flex-wrap align-items-center justify-content-center">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Address Search", "Index", "Search")</li>
                    <li>@Html.ActionLink("Add Device", "Index", "Create")</li>

                </ul>
                <div class="col-md-3 text-end">
                    <ul>
                        <li>@Html.Partial("_WelcomeMessage")</li>
                    </ul>

                </div>
            </div>
        </div>
        </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - StackTak Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/JavaScript.js"></script>
</body>
</html>
